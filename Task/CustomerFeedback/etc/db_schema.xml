<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="feedback_table" resource="default" engine="innodb" comment="Getting feedback from users">
        <column xsi:type="int" name="id" padding="11" unsigned="false" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="firstName" length="100"  nullable="false"  comment="Name"/>
        <column xsi:type="varchar" name="lastName" length="100"  nullable="false"  comment="Name"/>
        <column xsi:type="varchar" name="email" length="100"  nullable="false"  comment="email"/>
        <column xsi:type="varchar" name="feedback" length="500"  nullable="false"  comment="feedback"/>
        <column xsi:type="varchar" name="status"  length="50" nullable="false"  default="not reviewed" comment="status"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
